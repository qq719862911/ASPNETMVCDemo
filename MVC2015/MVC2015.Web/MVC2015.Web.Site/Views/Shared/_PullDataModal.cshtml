@using MVC2015.Web
@using MVC2015.Utility.Resource

<div id="pulldata-modal" class="modal fade" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="normal-modal-title"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content div-sort dialog-custome-wrap" id="pulldata-modal-form">
            <div class="row section-head">
                <div class="modal-title section-title ">
                    <h4 id="pulldata-modal-title" style="color:white; font-weight:bold;" class="modal-title">Normal Modal</h4>
                </div>
            </div>
            <div class="titlemenu">
                <button type="button" id="NormalSave" data-dismiss="modal" aria-hidden="true">
                    @ResourceHelper.GetValue("Common_Button_Synchronous")
                </button>
                <button type="button" data-dismiss="modal">
                    @ResourceHelper.GetValue("Common_Button_Close")
                </button>@* class="btn btn-default buttonfix btn-success"*@
            </div>



