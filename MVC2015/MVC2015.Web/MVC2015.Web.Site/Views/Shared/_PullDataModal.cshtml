                    <h4 id="normal-modal-title" style="color:white; font-weight:bold;" class="modal-title">Normal Modal</h4>
                </div>*@
            <div id="pulldata-modal-body" class="modal-body" style="min-height: 120px;padding-bottom:0">
                <img class="loading" src="@Url.Content("~/Images/Main/loading.gif")" alt="" />
            </div>
            <div class="modal-footer" style="display:none">

            </div>
        </div>
        <!-- /.modal-content -->
